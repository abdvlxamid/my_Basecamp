<main class="content-wrap">
		<header class="content-head">
			<h1>Tasks</h1>
				
			<div class="action">
				<%# <button> %>
        <%= link_to 'Add Task', new_project_task_path(@project), class: 'button-18' %>
				<%# </button> %>
			</div>
		</header> <br />
		
		<div class="content">

		
			<section class="person-boxes">
      
      <% @tasks.each do |task| %>
        
      
				<div class="person-box">
        
					
					<div class="box-bio">
						<h2 class="bio-name"><%= task.title %></h2>
						<p class="bio-position"><%= task.body %></p>
            <br>
              <%= simple_form_for([@project, task], remote: true, html: { class: 'update-task-form d-inline-flex align-items-center' }) do |f| %>
                <%= f.check_box  :completed, as: :boolean, label: "Completed?", input_html: { class: 'form-check-input mr-2' } %>
                <%= f.button :submit, "Update", class: 'button-3' %>
              <%=  link_to project_task_path(@project,task), 'data-turbo-method': :delete do %>
